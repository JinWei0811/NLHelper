{
  "manifest_version": 3,
  "name": "nlnlOUO",
  "version": "1.0.28",
  "description": "來，跟我一起說一聲：Piyan",
  "icons": {
    "16": "icons/nlnlOUO16.jpg",
    "32": "icons/nlnlOUO32.jpg",
    "48": "icons/nlnlOUO48.jpg",
    "128": "icons/nlnlOUO128.jpg"
  },
  "action": {
    "default_icon": "icons/nlnlOUO16.jpg",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/bg.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "*://*.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content/twitch-detector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "option/option.html"
  }
}
